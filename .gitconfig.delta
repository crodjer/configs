; vi: ft=gitconfig
[pager]
    diff = delta
    log = delta
    reflog = delta
    show = delta
[interactive]
    diffFilter = delta --color-only --features=interactive
[delta]
    syntax-theme = base16
    side-by-side = true
    hunk-header-style = yellow line-number
    hunk-header-decoration-style = none
    navigate = true
