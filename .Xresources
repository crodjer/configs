! ---[ URxvt config ]--------------------------------------------------

! URxvt.font: 9x15bold
! URxvt.boldFont: 9x15bold
URxvt*font: xft:Monospace:pixelsize=12
URxvt*boldFont: xft:Monospace:bold:pixelsize=12
URxvt*letterSpace: -1
URxvt*borderLess: false
URxvt*externalBorder: 0
URxvt*internalBorder: 0
URxvt*scrollBar: false
! URxvt*depth: 32
URxvt*cursorBlink: false
! URxvt*inheritPixmap: true
URxvt*termName: rxvt-unicode-256color
URxvt*saveLines: 10000
URxvt*scrollTtyOutput: false
URxvt*scrollTtyKeypress: true
URxvt*mouseWheelScrollPage: false
URxvt*cutchars: `'",;@&*=|/?()<>[]{}'
URxvt.perl-ext: default,url-select,keyboard-select,clipboard
URxvt.keysym.M-u: perl:url-select:select_next
URxvt.keysym.M-w:   perl:clipboard:copy
URxvt.keysym.M-y:   perl:clipboard:paste
URxvt.keysym.M-C-y: perl:clipboard:paste_escaped
URxvt.keysym.M-Escape: perl:keyboard-select:activate
URxvt.url-select.launcher: /usr/bin/firefox
URxvt.url-select.underline: true
URxvt*urgentOnBell: true
URxvt*visualBell: false
URxvt.clipboard.autocopy: true

! Looks and Colors
URxvt*background: #eeeeec
URxvt*foreground: black
URxvt*cursorColor: black
URxvt*cursorColor2: white

URxvt*color0: black
URxvt*color1: red3
URxvt*color2: green4
URxvt*color3: yellow4
URxvt*color4: blue2
URxvt*color5: magenta3
URxvt*color6: cyan4
URxvt*color7: gray90
URxvt*color8: gray50
URxvt*color9: red
URxvt*color10: green2
URxvt*color11: yellow3
URxvt*color12: rgb:5c/5c/ff
URxvt*color13: magenta
URxvt*color14: cyan2
URxvt*color15: white

! ---[ Fonts config ]--------------------------------------------------
Xft.dpi: 96
Xft.antialias: true
Xft.rgba: rgba
Xft.hinting: true
Xft.autohint: true
Xft.render: true
Xft.hintstyle: hintslight
