output eDP-1 {
    scale 1.75
}

output "BNQ BenQ EX2710R ETN8M00455SL0" {
    scale 1.2
    scale_filter smart
    # We run at 120Hz as we don't need 165 (the default) or 144.
    mode 2560x1440@119.998Hz
    adaptive_sync off
    render_bit_depth 10
}

