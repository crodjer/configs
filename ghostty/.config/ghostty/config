window-inherit-font-size = false

keybind = opt+enter=new_split:auto
keybind = opt+backslash=new_split:right
keybind = opt+apostrophe=new_split:down

keybind = opt+shift+f=toggle_split_zoom
keybind = opt+l=goto_split:right
keybind = opt+h=goto_split:left
keybind = opt+j=goto_split:down
keybind = opt+k=goto_split:up

keybind = opt+physical:one=goto_tab:1
keybind = opt+physical:two=goto_tab:2
keybind = opt+physical:three=goto_tab:3
keybind = opt+physical:four=goto_tab:4
keybind = opt+physical:five=goto_tab:5
keybind = opt+physical:six=goto_tab:6
keybind = opt+physical:seven=goto_tab:7
keybind = opt+physical:eight=goto_tab:8
keybind = opt+physical:nine=last_tab

keybind = opt+shift+l=resize_split:right,10
keybind = opt+shift+h=resize_split:left,10
keybind = opt+shift+j=resize_split:down,10
keybind = opt+shift+k=resize_split:up,10
