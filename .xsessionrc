## Configure Xsession

xrdb -merge ~/.Xresources
xset b 100 400 100
export PATH=$PATH:$HOME/bin

## Touchpad settings
synclient TapButton1=1, VertEdgeScroll=0, VertTwoFingerScroll=1, HorizTwoFingerScroll=1
synclient HorizScrollDelta=104, EmulateTwoFingerMinW=5
synclient PalmDetect=1, PalmMinWidth=5, PalmMinZ=10
synclient TouchpadOff=0, EmulateTwoFingerMinZ=80, VertScrollDelta=32
syndaemon -dKi 0.5

# Looks
xsetroot -cursor_name left_ptr
$HOME/workspace/scripts/display.sh
bash $HOME/.fehbg

# Map menu key to Super_R (Useful for laptop keyboard)
xmodmap -e "keycode 135 = Super_R NoSymbol Super_R"

pulseaudio &
## Start some useful programms
#pkill udisks-glue; udisks-glue &
pkill mpd; mpd &
xautolock -exit; xautolock -time 10 -locker "$HOME/bin/lock" &
pkill mpdscribble;mpdscribble &
pkill notification-dae; /usr/lib/notification-daemon/notification-daemon &
