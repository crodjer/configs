#!/usr/bin/env sh
## Configure Xsession

xrdb -merge ~/.Xresources
if [ -f ~/.Xresources.local ]; then
    xrdb -merge ~/.Xresources.local
fi

configure-keyboard.sh
# configure-touchpad.sh
configure-sound.sh

################################################################
# Looks and Applications (in decreasing order of importance)
################################################################

# xautolock -time 10 -locker "lock" &
urxvtd &
redshift -l 17.53:73.86 -b 0.3 &
stalonetray &
xcompmgr -f -I 0.5 -O 0.5 &
xsetroot -cursor_name left_ptr -solid "#000"
display.sh
bash "$HOME/.fehbg"
cmst &
